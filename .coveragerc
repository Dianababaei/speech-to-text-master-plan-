# Coverage.py configuration file
# Controls how coverage is measured and reported

[run]
# Source packages to measure coverage for
source = app

# Omit specific files/patterns from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */virtualenv/*
    app/__init__.py
    app/migrations/*
    alembic/*
    setup.py
    */conftest.py

# Enable branch coverage (if/else branches)
branch = True

# Parallel mode for parallel test execution
parallel = False

# Location to store coverage data
data_file = .coverage

[report]
# Precision for coverage percentage
precision = 2

# Show lines that weren't executed
show_missing = True

# Skip files with no executable code
skip_empty = True

# Ignore errors about missing source files
ignore_errors = False

# Exclude specific lines from coverage using comments
exclude_lines =
    # Standard pragma for excluding lines
    pragma: no cover
    
    # Don't complain about missing debug code
    def __repr__
    def __str__
    
    # Don't complain if tests don't hit defensive code
    raise AssertionError
    raise NotImplementedError
    raise ValueError
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Don't complain about abstract methods
    @abstract
    @abstractmethod
    
    # Don't complain about protocol methods
    @protocol
    @typing.Protocol
    
    # Don't complain about pass statements
    pass
    
    # Don't complain about ellipsis
    \.\.\.

# Fail if coverage is below this threshold
fail_under = 80

[html]
# Directory for HTML coverage report
directory = htmlcov

# Title for HTML report
title = Speech-to-Text Service Coverage Report

[xml]
# Output file for XML coverage report (for CI/CD)
output = coverage.xml

[json]
# Output file for JSON coverage report
output = coverage.json

# Pretty print JSON
pretty_print = True
