# OpenAI API Configuration
# Copy this file to .env and fill in your actual values

# Required: Your OpenAI API key
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Optional: Model to use for transcription
# Options: whisper-1 (default), gpt-4o-transcribe
OPENAI_MODEL=whisper-1

# Optional: API request timeout in seconds
# Default: 60
# Increase for large audio files
OPENAI_TIMEOUT=60

# Optional: Maximum number of retry attempts for transient errors
# Default: 3
OPENAI_MAX_RETRIES=3

# Optional: Initial delay before first retry (seconds)
# Default: 1.0
OPENAI_INITIAL_RETRY_DELAY=1.0

# Optional: Maximum delay between retries (seconds)
# Default: 60.0
OPENAI_MAX_RETRY_DELAY=60.0

# Optional: Multiplier for exponential backoff
# Default: 2.0
OPENAI_RETRY_MULTIPLIER=2.0
# Redis Configuration
# URL format: redis://[username:password@]host:port/db
REDIS_URL=redis://localhost:6379/0

# Queue Configuration
QUEUE_NAME=transcription_jobs

# Job Configuration
JOB_TIMEOUT=300

# Worker Configuration
WORKER_COUNT=2

# OpenAI API Configuration (for future use)
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/transcription_db

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
# Database Configuration
DATABASE_URL=sqlite:///./data/transcription.db

# Audio Storage Configuration
AUDIO_STORAGE_PATH=/app/audio_storage
MAX_FILE_SIZE_MB=10

# Lexicon Configuration
DEFAULT_LEXICON=radiology

# API Configuration
API_TITLE=Speech-to-Text Transcription API
API_VERSION=1.0.0
