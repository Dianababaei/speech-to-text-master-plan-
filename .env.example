# PostgreSQL Database Configuration
# Database name for the STT system
POSTGRES_DB=stt_database

# PostgreSQL admin username
POSTGRES_USER=stt_user

# PostgreSQL admin password (CHANGE THIS IN PRODUCTION!)
POSTGRES_PASSWORD=changeme_secure_password

# Redis Configuration
# Maximum memory Redis can use (default: 256MB)
REDIS_MAXMEMORY=256mb

# Memory eviction policy when max memory is reached
# Options: allkeys-lru, allkeys-lfu, volatile-lru, volatile-lfu, volatile-ttl, noeviction
REDIS_MAXMEMORY_POLICY=allkeys-lru

# FastAPI Application Configuration
# OpenAI API key for speech-to-text transcription (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Maximum allowed file size for audio uploads in bytes (default: 100MB)
MAX_FILE_SIZE=104857600
