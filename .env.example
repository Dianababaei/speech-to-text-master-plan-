# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://stt_user:stt_password@localhost:5432/stt_db

# Redis Configuration
# Redis connection string for caching and job queue
# Format: redis://host:port/db_number
REDIS_URL=redis://localhost:6379/0

# OpenAI API Configuration
# API key for OpenAI Whisper/GPT transcription services
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Settings
# Maximum file size for audio uploads (in bytes)
# Default: 26214400 (25 MB)
MAX_FILE_SIZE=26214400

# Maximum number of concurrent workers for processing audio files
# Adjust based on your server capacity
MAX_WORKERS=4

# API Security
# Secret key for hashing API keys
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_KEY_HASH_SECRET=your-secret-key-hash-secret-here

# Application Environment
# Options: development, staging, production
ENVIRONMENT=development

# Log Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# CORS Settings (comma-separated list of allowed origins)
# For development, use: http://localhost:3000,http://localhost:8080
# For production, specify your frontend domain(s)
CORS_ORIGINS=http://localhost:3000

# OpenAI Model Configuration
# Model to use for transcription (whisper-1 or gpt-4o-transcribe)
OPENAI_MODEL=whisper-1

# File Storage
# Directory for temporary audio file storage
TEMP_STORAGE_PATH=/tmp/stt_uploads

# Database Pool Settings (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
