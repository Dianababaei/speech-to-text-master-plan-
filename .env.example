# Database Configuration
# Copy this file to .env and update with your actual values

# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=speech_to_text
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Alternative: Use DATABASE_URL (takes precedence over individual variables)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/speech_to_text

# Docker Settings
AUTO_MIGRATE=true  # Set to false to disable automatic migrations on container startup

# Application Settings (for future use)
# APP_ENV=development
# LOG_LEVEL=INFO
# API_KEY=your_openai_api_key_here
