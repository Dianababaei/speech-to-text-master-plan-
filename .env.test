# Test Environment Configuration
# This file contains environment variables for running tests
# DO NOT use these values in development or production!

# Testing Flag
TESTING=true

# Database Configuration (SQLite in-memory for fast tests)
DATABASE_URL=sqlite:///:memory:

# Redis Configuration (Use dedicated test database)
REDIS_URL=redis://localhost:6379/15
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=15

# Queue Configuration
QUEUE_NAME=test_transcription_queue

# OpenAI API Configuration (Mock values - real API not called in tests)
OPENAI_API_KEY=test-api-key-12345678
OPENAI_MODEL=whisper-1

# Audio Storage Configuration
AUDIO_STORAGE_PATH=/tmp/test_audio_storage
TEMP_AUDIO_DIR=/tmp/test_audio
AUDIO_RETENTION_HOURS=1
CLEANUP_INTERVAL_MINUTES=5

# Application Settings
APP_NAME=Speech-to-Text Test Service
DEBUG=true
LOG_LEVEL=DEBUG

# Post-Processing Pipeline Configuration
ENABLE_LEXICON_REPLACEMENT=true
ENABLE_TEXT_CLEANUP=true
ENABLE_NUMERAL_HANDLING=true

# Lexicon Configuration
DEFAULT_LEXICON=general
LEXICON_CACHE_TTL=300

# Numeral Handling Configuration
DEFAULT_NUMERAL_STRATEGY=english

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=2

# Test-Specific Settings
TEST_USER_ID=test-user-123
TEST_API_KEY=test-api-key-abc
TEST_ADMIN_TOKEN=admin-token-xyz
